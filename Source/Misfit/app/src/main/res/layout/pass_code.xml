<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/passcodeEditText"
            android:hint="****"
            android:textColor="#ffffff"
            android:maxLength="4"
            android:focusableInTouchMode="false"
            android:fontFamily="Arial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/PasscodeButton"
            android:text="1"
            android:onClick="on1Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="2"
            android:onClick="on2Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="3"
            android:onClick="on3Click"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/PasscodeButton"
            android:text="4"
            android:onClick="on4Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="5"
            android:onClick="on5Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="6"
            android:onClick="on6Click"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/PasscodeButton"
            android:text="7"
            android:onClick="on7Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="8"
            android:onClick="on8Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="9"
            android:onClick="on9Click"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            style="@style/PasscodeButton"
            android:text="â‡¦"
            android:onClick="onBackClick"/>
        <Button
            style="@style/PasscodeButton"
            android:text="0"
            android:onClick="on0Click"/>
        <Button
            style="@style/PasscodeButton"
            android:text="OK"
            android:onClick="onOKClick"/>
    </LinearLayout>
</merge>